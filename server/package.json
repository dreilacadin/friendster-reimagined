{
  "name": "server",
  "version": "1.0.0",
  "description": "Friendster-Reimagined Server",
  "main": "index.js",
  "scripts": {
    "watch": "tsc -w",
    "dev": "nodemon -r dotenv-safe/config dist/index.js",
    "start": "node dist/index.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:generate": "yarn typeorm migration:generate --config src/ormconfig.ts --connection -n",
    "migration:run": "yarn typeorm --config src/ormconfig.ts migration:run",
    "migration:revert": "yarn typeorm --config src/ormconfig.ts migration:revert",
    "gen-env": "npx gen-env-types .env -o src/env.d.ts -e ."
  },
  "repository": "https://github.com/dreilacadin/friendster-reimagined",
  "author": "Drei Lacadin, Earle Cruz",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/connect-redis": "^0.0.15",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/ioredis": "^4.17.9",
    "@types/node": "^14.14.10",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0",
    "ts-node": "^9.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "apollo-server-express": "^2.19.0",
    "argon2": "^0.27.0",
    "class-validator": "^0.12.2",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "googleapis": "^66.0.0",
    "graphql": "^15.4.0",
    "ioredis": "^4.19.4",
    "nodemailer": "^6.4.17",
    "path": "^0.12.7",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.2"
  }
}
